{
  "extends": "@nayya-com/tsconfig/react-library.json",
  "compilerOptions": {
    /* Strict Type-Checking Options */
    "outDir": "./lib",
    "declaration": true,
    "declarationDir": "./lib/types",
    "module": "ESNext",
    "allowJs": false,
    "target": "es5",
    "rootDir": "./",
    "baseUrl": "./",
    "jsx": "react-jsx"
  },
  "include": ["./**/*.ts", "./**/*.tsx", "index.d.ts"],
  "exclude": ["node_modules", "lib"]
}
