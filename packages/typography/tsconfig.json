{
  "extends": "@nayya-com/tsconfig/react.json",
  "compilerOptions": {
    /* Strict Type-Checking Options */
    "outDir": "./lib",
    "declaration": true,
    "declarationDir": "./lib/types",
    "module": "ESNext",
    "allowJs": false,
    "target": "es5",
    "lib": ["es6", "dom"],
    "rootDir": "./",
    "baseUrl": "./",
    "jsx": "react-jsx"
  },
  "include": ["src/**/*", "index.d.ts"],
  "exclude": ["node_modules", "lib"]
}
